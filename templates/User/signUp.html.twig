{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Sign Up</h1>

    <div class="row justify-content-center">
        <div class="col-md-5">

            {{ form_start(form) }}

            {{ form_row(form.email, {'label': 'Adresse email :','attr': {'placeholder': 'Adresse email ...'}}) }}
            {{ form_row(form.firstname, {'label': 'Prénom :','attr': {'placeholder': 'Prénom ...'}}) }}
            {{ form_row(form.lastname, {'label': 'Nom :','attr': {'placeholder': 'Nom ...'}}) }}
            {{ form_row(form.password, {'label': 'Mot de passe :','attr': {'placeholder': 'Mot de passe !'}}) }}
            {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe :','attr': {'placeholder': 'Répétez votre mot de passe ...'}}) }}

            <button type="submit" class="btn btn-dark">Envoyer</button>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}