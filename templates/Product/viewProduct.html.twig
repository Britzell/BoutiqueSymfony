            <div class="mt-2">
                <a href="#" class="btn btn-dark">Ajouter au panier</a>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <h3>Commentaires :</h3>
            <a href="{{ path('product_comment_create', {id: product.id}) }}">Ajouter un commentaire</a>
        </div>

        {% for comment in product.comments %}
            <div class="col-md-12 mt-2">
                <div class="card">
                    <div class="card-body">
                        {{ comment.content }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

