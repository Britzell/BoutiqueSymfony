{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <div class="d-flex justify-content-between flex-wrap">
        {% for product in products %}
            <div class="card mb-2">
                <a href="{{ path('product_view', {slug: product.slug}) }}">
                    <img src="http://via.placeholder.com/256x256" class="card-img-top" alt="">
                    <div class="card-body">
                        <span class="cardCategory">{{ product.category.name }}</span>
                        <h5 class="card-title mb-0">{{ product.name }}<h5>
                        <span class="cardPrice">29,99 â‚¬</span>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}